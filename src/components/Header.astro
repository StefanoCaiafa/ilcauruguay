<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	
	.internal-links {
		display: flex;
		gap: 0.5em;
		align-items: center;
	}
	
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		
		nav {
			flex-direction: column;
			align-items: stretch;
			padding: 0.5em 0;
		}
		
		h2 {
			text-align: center;
			padding: 0.5em 0;
			border-bottom: 1px solid rgba(var(--black), 10%);
			margin-bottom: 0.5em;
		}
		
		.internal-links {
			flex-wrap: wrap;
			justify-content: center;
			gap: 0.25em;
			padding: 0 0.5em;
		}
		
		nav a {
			padding: 0.5em 0.75em;
			font-size: 0.9em;
			border-radius: 6px;
			transition: all 0.2s ease;
			border-bottom: none;
		}
		
		nav a:hover {
			background-color: rgba(var(--accent), 10%);
			color: var(--accent);
		}
		
		nav a.active {
			background-color: var(--accent);
			color: white;
			border-bottom: none;
		}
	}
	
	@media (max-width: 480px) {
		header {
			padding: 0 0.5em;
		}
		
		h2 {
			font-size: 1.5em;
		}
		
		h2 img {
			height: 1.2em !important;
		}
		
		.internal-links {
			gap: 0.2em;
		}
		
		nav a {
			padding: 0.4em 0.6em;
			font-size: 0.8em;
		}
	}
</style>
